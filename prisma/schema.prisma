datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model AskSubmission {
  id        String   @id @default(cuid())
  name      String?
  email     String?
  subject   String
  message   String
  createdAt DateTime @default(now())
  ref       String?
}

model Comment {
  id        String   @id @default(cuid())
  postSlug  String
  name      String
  email     String?
  message   String
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


