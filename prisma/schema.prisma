datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model AskSubmission {
  id        String   @id @default(cuid())
  name      String?
  email     String?
  subject   String
  message   String
  createdAt DateTime @default(now())
  ref       String?
}

model Comment {
  id        String   @id @default(cuid())
  postSlug  String
  name      String
  email     String?
  message   String
  approved  Boolean  @default(false)
  parentId  String?  // For replies
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  parent    Comment? @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("CommentReplies")
  reactions CommentReaction[]
  
  @@index([postSlug])
  @@index([parentId])
}

model CommentReaction {
  id        String   @id @default(cuid())
  commentId String
  userId    String   // User identifier (IP or session)
  type      String   // 'like', 'love', 'laugh', 'wow', 'sad', 'angry'
  createdAt DateTime @default(now())
  
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  
  @@unique([commentId, userId])
  @@index([commentId])
}

model PostLike {
  id        String   @id @default(cuid())
  userId    String // Using String for user identifier (IP or session)
  postSlug  String // Using postSlug since posts are markdown files
  createdAt DateTime @default(now())

  @@unique([userId, postSlug])
  @@index([postSlug])
}
